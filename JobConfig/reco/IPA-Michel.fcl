# Reconstruct from Michel electrons from the IPA
# David Brown (LBNL) 1 Feb 2019
# Edits : S Middleton 15 July 2021 (to match updated parameter names)
#include "Production/JobConfig/reco/Reco.fcl"

# the following need to be overwritten for the specific channel
outputs.Output.fileName: "mcs.owner.RecoIPAMichel.version.sequencer.art"
physics.producers.KSFDeM.MaxDoca : 80
physics.producers.KSFDeM.FilterOutliers : true
physics.producers.KSFDeM.KalFit.maxPull : 10
physics.producers.KSFDeM.KalFit.maxhitchi : 10
physics.producers.KSFDeM.KalFit.maxAddChi : 10
physics.producers.KSFDeM.KalFit.rescueHits : true
physics.producers.KSFDeM.ParameterErrors : [20.0, 0.1, 0.01, 20.0, 0.1]
# find low-momentum helices 
physics.producers.HelixFinderDe.targetconsistent_init : false
physics.producers.HelixFinderDe.targetconsistent : false
physics.producers.HelixFinderDe.HelixFitter.minCenterR : 10
physics.producers.HelixFinderDe.HelixFitter.maxCenterR : 500
physics.producers.HelixFinderDe.HelixFitter.minR : 10
physics.producers.HelixFinderDe.HelixFitter.maxR : 500
physics.producers.HelixFinderDe.HelixFitter.minAbsLambda : 50
physics.producers.HelixFinderDe.HelixFitter.maxAbsLambda : 1e13
physics.producers.HelixFinderDe.HelixFitter.minzsep : 40
physics.producers.HelixFinderDe.HelixFitter.maxzsep : 200
physics.producers.HelixFinderDe.HelixFitter.mindist : 5
physics.producers.HelixFinderDe.HelixFitter.ntripleMin : 2
physics.producers.HelixFinderDe.HelixFitter.minArea : 100
physics.producers.HelixFinderDe.HelixFitter.maxdist : 250
physics.producers.HelixFinderDe.HelixFitter.minArea : 800
physics.producers.HelixFinderDe.HelixFitter.minNHit : 1
physics.producers.HelixFinderDe.MinNStrawHits : 1
physics.producers.HelixFinderDe.MaxIterations : 100
physics.producers.HelixFinderDe.MaxChi2dXY : 500.0
physics.producers.HelixFinderDe.MaxChi2dZPhi : 500.0
physics.producers.HelixFinderDe.MaxChisquared : 250.
physics.producers.HelixFinderDe.SaveHelixFlag : ["HelixOK","HitsOK","CircleOK"]
physics.producers.HelixFinderDe.HelixFitter.minNStrawHits : 1
physics.producers.HelixFinderDe.HelixFitter.nLoopsdfdz : 5
physics.producers.HelixFinderDe.HelixFitter.targetintersect : false
# time clusters
physics.producers.TimeClusterFinderDe.UseCaloCluster : true
physics.producers.TimeClusterFinderDe.CaloClusterMinE : 1
physics.producers.TimeClusterFinderDe.AveragePitch : 0.5
physics.producers.TimeClusterFinderDe.MinNHits  : 1
physics.producers.TimeClusterFinderDe.DtMax : 1e7
physics.producers.TimeClusterFinderDe.Tmin                   : -1e7
physics.producers.TimeClusterFinderDe.Tmax                   : 1e7
physics.producers.TimeClusterFinderDe.MaxdPhi                : 1e7
# turn off the rest
physics.producers.TimeClusterFinderDmu.Ymin : 1e7
physics.producers.TimeClusterFinderUe.Ymin : 1e7
physics.producers.TimeClusterFinderUmu.Ymin : 1e7
# primary finding
physics.producers.FindMCPrimary.SinglePrimary : true
# TPR downstream electrons only for now
physics.producers.MHDeM.HelixFinders : ["HelixFinderDe:Positive"]
physics.producers.MHDeP.HelixFinders : []
physics.producers.MHDmuM.HelixFinders : []
physics.producers.MHDmuP.HelixFinders : []
# output filter update
physics.filters.RecoFilter.TrkTags : [ "KFFDeM","KFFUeM" ]
physics.filters.RecoFilter.MomentumCutoff : [1.0,1.0]

services.scheduler.wantSummary: true
services.TFileService.fileName: "nts.owner.test.version.sequencer.root"
